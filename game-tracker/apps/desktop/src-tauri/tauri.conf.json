{
  "$schema": "https://schemas.tauri.app/config/2",
  "productName": "Game Tracker",
  "version": "0.1.0",
  "identifier": "com.example.gametracker",
  "build": {
    "beforeDevCommand": "pnpm --filter @tracker/web dev -- --port 5173",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "pnpm --filter @tracker/web build",
    "frontendDist": "../../web/dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      { "title": "Game Tracker", "width": 1280, "height": 800, "resizable": true }
    ]
  },
  "bundle": {
    "active": true,
    "targets": ["msi"],
    "windows": { "webviewInstallMode": { "type": "downloadBootstrapper" } }
  }
}
